/*
Given an array of non-negative integers and a value sum,
determine total number of subset with sum equal to given sum.
*/
/*
 Given solution is O(n*sum) Time complexity and O(sum) space
*/
function NumberOfSubsetSum( array ,sum){
     let dp =[]; // create an dp array where dp[i] denotes number of subset with sum equal to i 
     for (var i = 1; i <= sum; i++) {
         dp[i] =0; 
     }
     dp[0]=1;  // since sum equal to 0 is always possible with no element in subset
     
     for (var i = 0; i < array.length; i++) {
           for (var j = sum; j >= array[i]; j--) {
                 if( j-array[i] >= 0) {
                    dp[j] += dp[j-array[i]]; // add number of subset with sum equal to j-array[i] to dp[j]
                 }
           }
     }
     return dp[sum];
}

function main () {
     var array=[1,1,3,2,2,1];
     var sum=4;
     var result = NumberOfSubsetSum( array , sum);
     console.log( result );
}
main();
